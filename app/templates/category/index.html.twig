{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.cookbook'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.categories'|trans }}</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="mb-3 text-end">
            <a href="{{ path('category_create') }}" class="btn btn-success">
                {{ 'action.add_category'|trans }}
            </a>
        </div>
    {% endif %}

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'category.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.createdAt'|trans, 'category.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updatedAt'|trans, 'category.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'category.title') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.createdAt|date('Y-m-d') }}</td>
                    <td>{{ category.updatedAt|date('Y-m-d') }}</td>
                    <td>{{ category.title }}</td>
                    <td>
                            <a href="{{ path('category_view', {id: category.id}) }}" class="btn btn-sm btn-outline-primary">
                                {{ 'action.view'|trans }}
                            </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('category_edit', {id: category.id}) }}" class="btn btn-sm btn-outline-secondary">
                                {{ 'action.edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('category_delete', {id: category.id}) }}" class="btn btn-sm btn-outline-danger">
                                {{ 'action.delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
    {% endif %}
{% endblock %}

