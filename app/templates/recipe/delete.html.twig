{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.cookbook'|trans({'%id%': recipe.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.delete'|trans({'%id%': recipe.id|default('')}) }}</h1>
    <div class="mb-3">
        <strong>{{ 'label.title'|trans }}: </strong> {{ recipe.title }}
    </div>
    <div class="mb-3">
        <strong>{{ 'label.category'|trans }}:</strong> {{ recipe.category.title }}
    </div>
    <div class="mb-3">
        <strong>{{ 'label.createdAt'|trans }}:</strong> {{ recipe.createdAt|date('Y-m-d') }}
    </div>
    <div class="mb-3">
        <strong>{{ 'label.author'|trans }}:</strong> {{ recipe.author.email }}
    </div>
    <div class="form-group row float-sm-right">
        <a href="{{ path('recipe_delete_confirmed', {id: recipe.id}) }}"
           class="btn btn-primary"
           onclick="return confirm('{{ 'message.confirm_delete_recipe'|trans }}');">
            {{ 'action.delete'|trans }}
        </a>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
{% endblock %}