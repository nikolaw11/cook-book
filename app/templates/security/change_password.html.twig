{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.cookbook'|trans }}
{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h1 class="mb-4">Zmień hasło</h1>

            {{ form_start(changePasswordForm) }}
            {{ form_row(changePasswordForm.currentPassword) }}
            {{ form_row(changePasswordForm.plainPassword) }}
            <button class="btn btn-primary mt-3">{{ 'action.save'|trans }}</button>
            {{ form_end(changePasswordForm) }}
        </div>
    </div>
{% endblock %}

