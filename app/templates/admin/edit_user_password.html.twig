{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.cookbook'|trans }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'label.change_password'|trans }} {{ user.email }}</h1>

        {{ form_start(form) }}
        {{ form_row(form.plainPassword) }}
        <button class="btn btn-success mt-2">{{ 'label.change_password'|trans }}</button>
        {{ form_end(form) }}

        <div class="form-group row float-sm-left">
            <a href="{{ url('admin_user_list') }}" class="btn btn-link">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
