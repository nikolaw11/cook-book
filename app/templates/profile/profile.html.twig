{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.cookbook'|trans }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ 'title.profile'|trans }}</h1>

        <div class="mb-4">
            <p><strong>{{ 'label.user_email'|trans }}: </strong> {{ app.user.email }}</p>
        </div>

        <div class="card">
            <div class="card-body">
                <h2 class="h5 mb-3">{{ 'label.change_password'|trans }}</h2>

                {{ form_start(changePasswordForm, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_row(changePasswordForm.plainPassword) }}
                </div>
                <button class="btn btn-primary">{{ 'label.change_password'|trans }}</button>
                {{ form_end(changePasswordForm) }}
            </div>
        </div>
    </div>
    <p>
        <a href="{{ url('recipe_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    </p>
{% endblock %}

