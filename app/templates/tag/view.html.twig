{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.cookbook'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ tag.title }}</h1>
    {% if tag is defined %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ tag.id }}</dd>
            <dt>{{ 'label.createdAt'|trans }}</dt>
            <dd>{{ tag.createdAt|date('Y-m-d') }}</dd>
            <dt>{{ 'label.updatedAt'|trans }}</dt>
            <dd>{{ tag.updatedAt|date('Y-m-d') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  tag.title }}</dd>
        </dl>
        <p>
            <a href="{{ url('tag_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}